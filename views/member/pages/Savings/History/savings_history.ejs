 <%- include('../../../../partials/header.ejs') %>



<aside id="rightsidebar" class="right-sidebar">
        <ul class="nav nav-tabs">
            <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#chat">
                Search Results</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane right_chat pullUp active" id="chat">
                <div class="slim_scroll">
                    <div class="card">
                        <ul class="list-unstyled" id="mini-cart">
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </aside>

    


    <section class="content invoice">
      <div class="block-header" style="margin-top:5rem;">
        <div class="row">
          <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>
            Savings History
            </h2>
          </div>
          <div class="col-lg-5 col-md-6 col-sm-12">
            <ul class="breadcrumb float-md-right">
              <li class="breadcrumb-item">
                <a href="dashboard"><i class="zmdi zmdi-home"></i> Novax-Assets</a>
              </li>
              <li class="breadcrumb-item">
                <a href="javascript:void(0);">Savings History</a>
              </li>
              
            </ul>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row clearfix">
          <div class="col-lg-12">
            
            <div class="tab-content">
              <div
                role="tabpanel"
                class="tab-pane in active"
                id="details"
                aria-expanded="true"
              >
                <div class="card" id="details">
                  <div class="body">
                    
                    <div class="row">
                      <div class="col-md-12">
                        <div class="table-responsive">
                          <table
                            id="mainTable"
                            class="table table-striped"
                            style="cursor: pointer"
                          >
                            <thead>
                              <tr>
                                <th></th>
                                
                                <th>Amount</th>
                                <th>Savings Name</th>
                                <th>Percentage</th>
                                <th>Profit</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th></th>
                              </tr>
                            </thead>
                            <tbody>
                              <% if (savings && savings.length > 0) { %>
                                <% savings.forEach(function(s){ %>
                                  <tr>
                                    <td></td>
                                    <td>$ <%= s.amount %></td>
                                    <td><%= s.savings_name %></td>
                                    <td><%= s.rate %>%</td>
                                    <td>$ <%= s.profit %></td>
                                    <td><span class="alert alert-warning"><%= s.status %></span></td>
                                    <td><%= (s.date && s.date.toLocaleDateString) ? s.date.toLocaleDateString() : s.date %></td>
                                    <td></td>
                                  </tr>
                                <% }) %>
                              <% } else { %>
                                <tr>
                                  <td class="alert alert-warning" colspan="8">No Data Yet</td>
                                </tr>
                              <% } %>
                            </tbody>

                                                          </table>
                        </div>
                      </div>
                    </div>
                   
                  
                  </div>
                </div>
              </div>
              
            
            </div>
          </div>
        </div>
      </div>
    </section>

    <script src="/assets/bundles/libscripts.bundle.js"></script>
    <script src="/assets/bundles/vendorscripts.bundle.js"></script>
    <script src="/assets/bundles/mainscripts.bundle.js"></script>
    <script>
    const elements = document.getElementsByClassName("clickrow");
    const giveReceipt = function() {
      const ref = this.getAttribute('data-ref');
      const URL = "spayment?id=" + ref;
      openInNewTab(URL);
    };

    for (let i = 0; i < elements.length; i++) {
      elements[i].addEventListener('click', giveReceipt, false);
    }

    function openInNewTab(href) {
      Object.assign(document.createElement('a'), {
        target: '_blank',
        href: href,
      }).click();
    }
  </script>
  </body>
  
</html>