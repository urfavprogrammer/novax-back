<%-include('../../adminlayout/partials/header')%>
  <body>
    <div class="container-scroller">

      <%-include('../../adminlayout/partials/navbar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
       <%-include('../../adminlayout/partials/topbar') %>



       <div class="main-panel">
        <div class="content-wrapper">
            <div class="row ">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                     <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
                <% } %> <% if (errors && errors.length) { %>
                <div class="alert alert-danger">
                  <ul>
                    <% errors.forEach(function(e){ %>
                    <li><%= e %></li>
                    <% }) %>
                  </ul>
                </div>
                <% } %> <% if (messages && messages.success) { %>
  <div class="alert alert-success"><%= messages.success %></div>
<% } %>
                    <h4 class="card-title">All Pending Deposit</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>
                              <!-- <div class="form-check form-check-muted m-0">
                                <label class="form-check-label">
                                  <input type="checkbox" class="form-check-input">
                                <i class="input-helper"></i></label>
                              </div> -->
                            </th>
                            <th> Transaction ID </th>
                            <th> User Name </th>
                            <th> Deposit Amount </th>
                            <th> Method of Payment </th>
                            <th> Payment Status </th>
                            <th> Date of Deposit </th>
                            <th> Investment Type </th>
                            <th colspan="3"> Operations </th>
                            <!-- <th> Decline </th>
                            <th> Delete </th> -->
                            <!-- <th> Payment Status </th> -->
                             
                          </tr>
                        </thead>
                        <tbody>
                          <% if (Array.isArray(deposits) && deposits.length) { %>
                            <% deposits.forEach(function(d) { %>
                              <tr>
                                <td>
                                </td>
                                <td style="color: rgb(146, 88, 88);"><%= d.deposittransactionid.slice(0, 12) || '—' %></td>
                                <td><%= d.username || '—' %></td>
                                <td><%= d.amount || '—' %></td>
                                <td><%= d.depositmethod || '—' %></td>
                                <td><%= d.depositstatus || '—' %></td>
                                <td><%= (d.created_at || d.createdAt).toLocaleDateString() || '—' %></td>
                                <td><%= (d.depositmemo || '—')%></td>
                                <!-- <% if (d.filePath) { %>  
                                  <td><a href="/uploads<%= d.filePath.split('uploads')[1] %> " target="_blank" alt="Proof" style="max-width:200px;">View Proof</a></td>
                                <% } else { %>
                                  <td>—</td>
                                <% } %> -->
                                <td>
                                    <form action="/admin/approve_deposit" method="post" class="approve-deposit-form">
                                        <input type="hidden" name="id" value="<%= d.id %>">
                                        <input type="hidden" name="depositid" value="<%= d.deposittransactionid %>">
                                        <input type="hidden" name="depositSrc" value="<%= d.depositmemo %>">
                                        <input type="hidden" name="username" value="<%= d.username %>">
                                        <input type="hidden" name="amount" value="<%= d.amount %>">
                                        <button type="submit" class="btn btn-inverse-success btn-fw">Approve</button>
                                    </form>
                                </td>
                                <td>
                                   <form action="/admin/deposit/decline" method="post" class="decline-deposit-form">
                                        <input type="hidden" name="id" value="<%= d.id %>">
                                        <input type="hidden" name="depositid" value="<%= d.deposittransactionid %>">
                                        <input type="hidden" name="username" value="<%= d.username %>">
                                        <input type="hidden" name="amount" value="<%= d.amount %>">
                                        <button type="submit" class="btn btn-inverse-warning btn-fw">Decline</button>
                                    </form>
                                </td>
                                <td>
                                    <form action="/admin/deposit/delete" method="post" class="delete-deposit-form">
                                        <input type="hidden" name="id" value="<%= d.id %>">
                                        <input type="hidden" name="depositid" value="<%= d.deposittransactionid %>">
                                        <input type="hidden" name="username" value="<%= d.username %>">
                                        <input type="hidden" name="amount" value="<%= d.amount %>">
                                        <button type="submit" class="btn btn-inverse-danger btn-fw">Delete</button>
                                    </form>
                                </td>
                              </tr>
                            <% }) %>
                          <% } else { %>
                            <tr>
                              <td colspan="7" class="text-center">No registered users found</td>
                            </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>

              </div>
            </div>
        </div>
       </div>
        <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
                <% } %> <% if (errors && errors.length) { %>
                <div class="alert alert-danger">
                  <ul>
                    <% errors.forEach(function(e){ %>
                    <li><%= e %></li>
                    <% }) %>
                  </ul>
                </div>
                <% } %> <% if (success) { %>
                <div class="alert alert-success">
                  Deposit Successfully Declined
                </div>
                <% } %>

       
       

       <%-include('../../adminlayout/partials/footer') %>

       

<div id="admin-flash" style="position:fixed;right:20px;bottom:20px;z-index:9999;display:none;">
  <div id="admin-flash-msg" class="alert alert-success" role="alert"></div>
</div>

